<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain"
    tools:context="com.kiet.ecell.endeavour.register">
    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_toolbar"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="#e62d2d2d"
            android:layout_height="wrap_content"
            >

            <com.kiet.ecell.endeavour.YourTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="REGISTRATION FORM"
                android:textStyle="bold"
                android:id="@+id/form"
                android:textColor="#ffd100"
                android:textAppearance="?android:textAppearanceLarge"
                />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#DCDCDC"
            android:singleLine="true"
            android:drawableLeft="@drawable/name"
            android:drawablePadding="8dp"
            android:hint="Full Name" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email"
        android:layout_width="match_parent"
        android:layout_below="@+id/input_layout_name"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:textColor="#DCDCDC"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="8dp"
            android:inputType="textEmailAddress"
            android:hint="Email" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_pass"
        android:layout_width="match_parent"
        android:layout_below="@+id/input_layout_email"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_pass"
            android:layout_width="match_parent"
            android:textColor="#DCDCDC"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="8dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="Password" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_phone"
        android:layout_width="match_parent"
        android:layout_below="@+id/input_layout_pass"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/mobile"
            android:layout_height="wrap_content"
            android:textColor="#DCDCDC"
            android:singleLine="true"
            android:drawablePadding="8dp"
            android:inputType="number"
            android:hint="Phone Number" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_college"
        android:layout_width="match_parent"
        android:layout_below="@+id/input_layout_phone"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_college"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#DCDCDC"
            android:drawableLeft="@drawable/college"
            android:drawablePadding="8dp"
            android:hint="College" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_year"
        android:layout_width="match_parent"
        android:layout_below="@+id/input_layout_college"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:drawableLeft="@drawable/year"
            android:drawablePadding="8dp"
            android:singleLine="true"
            android:textColor="#DCDCDC"
            android:hint="Year" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_branch"
        android:layout_width="match_parent"
        android:layout_below="@+id/input_layout_year"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#DCDCDC"
            android:drawableLeft="@drawable/branch"
            android:drawablePadding="8dp"
            android:hint="Branch" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_brand"
        android:layout_width="match_parent"
        android:layout_below="@+id/input_layout_branch"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#DCDCDC"
            android:drawableLeft="@drawable/campus"
            android:drawablePadding="8dp"
            android:hint="Campus Ambassador Id" />
    </android.support.design.widget.TextInputLayout>
            <com.kiet.ecell.endeavour.YourButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttoncurve"
                android:textColor="#191919"
                android:layout_centerInParent="true"
                android:layout_below="@+id/input_layout_brand"
                android:text="Submit"
                android:textSize="34sp"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
